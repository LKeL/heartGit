<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="4dp"
    android:layout_marginTop="3dp"
    android:layout_marginBottom="3dp"
    android:id="@+id/news_card_label">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/news_card_label_container"
        android:orientation="horizontal" >
        <com.facebook.drawee.view.SimpleDraweeView
            android:id="@+id/news_card_portrait"
            android:layout_width="200px"
            android:layout_height="200px"
            android:layout_gravity="center_vertical"
            app:placeholderImage="@mipmap/news_card_portrait"
            app:roundedCornerRadius="15dp"
            android:layout_margin="12dp"/>
        <TextView
            android:id="@+id/news_card_label_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textSize="23sp"  />
    </LinearLayout>

</android.support.v7.widget.CardView>